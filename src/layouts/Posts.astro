---
import type { CollectionEntry } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Main from "@layouts/Main.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Pagination from "@components/Pagination.astro";
import Card from "@components/Card";
import { localizePath } from "astro-i18next";
import { t } from "i18next";

export interface Props {
  currentPage: number;
  totalPages: number;
  paginatedPosts: CollectionEntry<"blog">[];
}

const { currentPage, totalPages, paginatedPosts } = Astro.props;
---

<Layout title={t("posts") as string}>
  <Header activeNav="posts" />
  <Main pageTitle={t("posts") as string} pageDesc={t("postsDesc") as string}>
    <ul>
      {
        paginatedPosts.map(({ data, slug }) => (
          <Card
            href={localizePath(`/posts/${data.permalink || slug}`)}
            frontmatter={data}
            transition:persist
          />
        ))
      }
    </ul>
  </Main>

  <Pagination
    {currentPage}
    {totalPages}
    prevUrl={localizePath(
      `/posts${currentPage - 1 !== 1 ? "/" + (currentPage - 1) : ""}`
    )}
    nextUrl={localizePath(`/posts/${currentPage + 1}`)}
  />

  <Footer noMarginTop={totalPages > 1} />
</Layout>
