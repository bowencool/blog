---
import i18next, { t, changeLanguage } from "i18next";
import { getPostsByLang } from "@utils/getPosts";
import Posts from "@layouts/Posts.astro";
import getSortedPosts from "@utils/getSortedPosts";
import getPagination from "@utils/getPagination";

changeLanguage("en");

// TODO 统计
// todo markdown a target _blank
// todo vue 语法高亮
// todo TOC 放到右侧悬浮
// todo backToTop 悬浮
// todo 如果有另一个语言的版本，要给出提示 https://docs.github.com/en/rest/issues/issues?apiVersion=2022-11-28
const posts = await getPostsByLang(i18next.language);
const sortedPosts = getSortedPosts(posts);
// console.log("posts index", posts.length);
const pagination = getPagination({
    posts: sortedPosts,
    page: 1,
    isIndex: true,
});
---

<Posts {...pagination} />
